{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
  },
  "rules": {
    // Code style
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single", "avoid-escape"],
    // Best practices
    "curly": 0,
    "eqeqeq": [2, "smart"],
    "no-floating-decimal": 2,
    // Possible errors
    "no-comma-dangle": 0,
    "no-use-before-define": [2, "nofunc"],
    // Strict mode
    "strict": 0
  }
}
